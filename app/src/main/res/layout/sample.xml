<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/input_backg_color"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_box"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingTop="50dp"
            android:gravity="right"
            android:inputType="none"
            android:textSize="40sp"
            android:background="@color/input_backg_color"
            android:ems="10"/>

        <TextView
            android:id="@+id/result_box"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="right"
            android:layout_marginTop="40dp"
            android:background="@color/input_backg_color"
            android:textSize="27dp"
            android:textColor="#acabab"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/butdelet"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/ic_backspace_button"
            app:srcCompat="@drawable/ic_backspace_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="7"
                android:onClick="onClickNumber"
                android:textSize="24sp"
                android:layout_margin="7dp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/but8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="8"
                android:onClick="onClickNumber"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/but9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="9"
                android:onClick="onClickNumber"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/butadd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="#4bc40e"
                android:layout_weight="1"
                android:background="@drawable/operation_button"
                android:text="+"
                android:onClick="onClickOperator"
                android:textSize="32dp"
                tools:ignore="OnClick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:onClick="onClickNumber"
            android:orientation="horizontal"
            tools:ignore="OnClick">

            <Button
                android:id="@+id/but4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="4"
                android:onClick="onClickNumber"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/but5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="5"
                android:onClick="onClickNumber"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/but6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="6"
                android:onClick="onClickNumber"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/butmin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#4bc40e"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/operation_button"
                android:text="-"
                android:textSize="32dp"
                android:onClick="onClickOperator"

                tools:ignore="OnClick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="1"
                android:onClick="onClickNumber"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/but2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="2"
                android:onClick="onClickNumber"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/but3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="3"
                android:onClick="onClickNumber"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/butmul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/operation_button"
                android:text="x"
                android:textAllCaps="false"

                android:onClick="onClickOperator"
                android:textColor="#4bc40e"
                android:textSize="32dp"
                tools:ignore="OnClick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/butclear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/operation_button"
                android:text="C"
                android:textColor="#f24747"
                android:onClick="onClearButton"
                android:textSize="32dp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/butzero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:onClick="onClickNumber"
                android:text="0"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/butdiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#4bc40e"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/operation_button"
                android:text="\u00F7"
                android:onClick="onClickOperator"
                android:textSize="32dp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/butequal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/equal_button"
                android:text="="
                android:textColor="@color/equl_text_color"
                android:onClick="equalresult"
                android:textSize="32dp"
                tools:ignore="OnClick" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>