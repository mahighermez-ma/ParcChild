<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#e9dec5">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usage state"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/txtpercall"
        android:textColor="#732121"
        android:textSize="27dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/txtpercall"
        android:layout_marginTop="45dp"
        android:id="@+id/call"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="left"
            android:text="We want this access(with telephone permission) for being able to identify the app that is running on your kid's device and lock or unlock it by your decision
"
            android:textColor="#0c304e"
            android:lineSpacingMultiplier="2"
            android:textSize="17dp"
            />


    </ScrollView>


</RelativeLayout>